import logging

logger = logging.getLogger(__name__)

@transformer
def transform(data, *args, **kwargs):
    logger.info(f"Rows before dropping {len(data)}")
    df = data.dropna()
    with engine.connect() as conn:
        conn.execute(
            text("UPDATE sample_table
                SET name = :name,
                    department = :dept,
                    salary = :salary
                WHERE employee_id = :id
            "),
            {"name": "Alice", "dept": "HR", "salary": 60000, "id": 2}
        )
        conn.commit()

    return data


    table = kwargs.get("table_name", "default_table")
    logger.info(f"Rows after dropping {len(df)}")
    return df


